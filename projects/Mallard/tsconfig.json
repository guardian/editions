{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es2017", "es2018.promise"],
		"moduleResolution": "nodenext",
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"types": ["node", "jest"]
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
