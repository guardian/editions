        "react-native-svg": "^9.6.2",
        "react-native-webview": "^6.9.0",
        "react-native-zip-archive": "^4.1.2",
        "react-navigation": "3.11.1",
        "react-navigation-fluid-transitions": "^0.3.2",
        "rn-fetch-blob": "0.10.16",
        "validator": "^11.1.0"
