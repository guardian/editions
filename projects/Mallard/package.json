        "invariant": "^2.2.4",
        "jetifier": "^1.6.3",
        "kill-port": "^1.5.1",
        "moment": "^2.24.0",
        "node-fetch": "^2.6.0",
        "nodegit": "^0.24.3",
        "npm-run-all": "^4.1.5",
        "query-string": "^6.8.2",
        "react": "^16.9.0",
        "react-native": "0.60.4",
        "react-native-config": "^0.11.7",
        "react-native-device-info": "^2.3.2",
